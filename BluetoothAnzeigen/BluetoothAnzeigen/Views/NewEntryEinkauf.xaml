<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BluetoothAnzeigen.Views.NewEntryEinkauf"
             Title="New Entry">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding SaveCommand}"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <TableView Intent="Form">
            <TableView.Root>
                <TableSection>
                    <EntryCell x:Name="betrag" Label="Betrag" Keyboard="Numeric" Text="{Binding Betrag}"/>
                    <EntryCell x:Name="marktname" Label="Marktname" Text="{Binding Marktname}"/>
                    <EntryCell Label="Datum" Text="{Binding Datum, StringFormat='{0:d}'}"/>
                    <EntryCell Label="Artikelanzahl" Keyboard="Numeric" Text="{Binding Artikelanzahl}"/>
                    <EntryCell Label="Latitude" Keyboard="Numeric" Text="{Binding Latitude}"/>
                    <EntryCell Label="Longitude" Keyboard="Numeric" Text="{Binding Longitude}"/>
                </TableSection>
            </TableView.Root>
        </TableView>
    </ContentPage.Content>
</ContentPage>